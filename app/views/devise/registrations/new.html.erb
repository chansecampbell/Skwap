<h2>Register</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div class="row" data-equalizer>
    <div class="medium-12 columns" data-equalizer-watch>
  <div class="field">
    <%= f.text_field :first_name, placeholder: "First Name"%>
  </div>
  </div>
  </div>


  <div class="row" data-equalizer>
    <div class="medium-12 columns" data-equalizer-watch>
  <div class="field">
    <%= f.text_field :last_name, placeholder: "Last Name"%>
  </div>
  </div>
  </div>


  <div class="row" data-equalizer>
    <div class="medium-12 columns" data-equalizer-watch>
  <div class="field">
    <%= f.text_field :location, placeholder: "Location"%>
  </div>
  </div>
  </div>

  <div class="row" data-equalizer>
    <div class="medium-12 columns" data-equalizer-watch>
  <div class="field">
    <%= f.email_field :email, placeholder: "Email Address", autofocus: true %>
  </div>
  </div>
  </div>

  <div class="row" data-equalizer>
    <div class="medium-12 columns" data-equalizer-watch>
  <div class="field">
    <%= f.password_field :password, placeholder: "Password (8 characters minimum)", autocomplete: "off" %>
  </div>
  </div>
  </div>

  <div class="row" data-equalizer>
    <div class="medium-12 columns" data-equalizer-watch>
  <div class="field">
    <%= f.password_field :password_confirmation, placeholder: "Password confirmation", autocomplete: "off" %>
  </div>
  </div>
  </div>

  <div class="row" data-equalizer>
    <div class="medium-12 columns" data-equalizer-watch>
  <div class="field">
  <div class="actions">
    <%= f.submit "Sign up" %>
  </div>
  </div>
  </div>
<% end %>