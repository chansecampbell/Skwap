<h3>All Skills</h3>

<%= search_form_for @q do |f| %>
  <p>
    <%= f.label :location_cont %>
    <%= f.text_field :location_cont %>
  </p>
  <p>
    <%= f.label :category_cont %>
    <%= f.text_field :category_cont %>
  </p>
  <p>
    <%= f.submit %>
  </p>
<% end %>


<span><%= sort_link @q, :title %></span>

<%= render @skills %>

<%#= current_user.inspect %>

<h3><%= current_user.first_name %>'s Lessons</h3>
<% @connections.each do |connection| %>
<% if current_user.id == connection.sender_id %>
<h3><%= link_to connection.skill.try(:title), skill_connection_path(connection.skill_id, connection) %></h3>
<li><strong>Message:</strong> <%= connection.details %></li>
<li><strong>Sender ID:</strong> <%= connection.sender_id %></li>
<li><strong>Receiver ID:</strong> <%= connection.receiver_id %></li>
<li><strong>Lesson status:</strong> <%= connection.status %></li>
<% end %>
  <% end %>