<!-- Wraps the entire page -->
<div class="row main-row">
  <div class="medium-10 columns medium-centered">

    <ul class="tabs" data-tab data-options="scroll_to_content: false">
      <li class="tab-title"><a href="#learn">Learn a skill</a></li>
      <li class="tab-title"><a href="#user-learnings"><%= current_user.first_name %>'s learnings</a></li>
    </ul>

    <div class="tabs-content">

      <div class="content" id="learn">
      <div class="row">
        <div class="medium-12 columns">
        <li><%= image_tag("/assets/running-pair.jpg") %></li>
        </div>
        </div>
        <div class="row" data-equalizer>
          <%#= @categories %>
          <%= search_form_for @q do |f| %>
          <div class="medium-5 columns">
            <%= f.label :location_cont %>
            <%= f.text_field :location_cont %>
          </div>
          <div class="medium-5 columns">
            <%= f.label :category_cont %>
            <%= f.text_field :category_cont %>
          </div>
          <div class="medium-2 columns">
            <%= f.submit "Submit", class: "button" %>
          </div>

          <% end %>
        </div>
        <%= render @skills %>
      </div>

      <div class="content" id="user-learnings">
      <div class="row">
        <div class="medium-12 columns">
        <li><%= image_tag("/assets/gym-pair.jpg") %></li>
        </div>
        </div>

       <div class="row">
         <div class="medium-12 columns">
           <div class="card">
           <div class="row">
           <div class="medium-6 columns">
              <%= link_to image_tag(current_user.photo.thumb.url), current_user.photo.url %>
              </div>
              <div class="medium-3 columns">
               <span><%= current_user.first_name %> <%= current_user.last_name %></span>
                </div>
                <div class="medium-3 columns">
                  <span><strong>Credits:</strong> <%= current_user.credits %></span>
                  </div>
                 </div>
              </div>
           
            </div>
            </div>
     

        <%= render "learn" %>
  

   </div>
 </div>
 </div>
 </div>
 </div>

