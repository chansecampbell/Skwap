  <%= form_for(@skill) do |f| %>

  <div class="row" data-equalizer>
    <div class="medium-12 columns" data-equalizer-watch>
  <div class="field">
    <%= f.text_field :title, placeholder: "Title", autofocus: true %>
  </div>
  </div>
  </div>

  <div class="row" data-equalizer>
    <div class="medium-12 columns" data-equalizer-watch>
  <div class="field">
    <%= f.select :category, ['Music', 'Sport', 'Coding', 'Cooking'], autofocus: true %>
  </div>
  </div>
  </div>

  <div class="row" data-equalizer>
    <div class="medium-12 columns" data-equalizer-watch>
  <div class="field">
    <%= f.text_area :description, placeholder: "Description", autofocus: true %>
  </div>
  </div>
  </div>

  <div class="row" data-equalizer>
    <div class="medium-12 columns" data-equalizer-watch>
  <div class="field">
  <%= f.select :location, ['North London', 'East London', 'South London', 'West London', 'Central London'], autofocus: true %>  </div>
  </div>
  </div>

  <div class="row" data-equalizer>
    <div class="medium-12 columns" data-equalizer-watch>
  <div class="field">
  <%= f.select :availability, ['Morning', 'Afternoon', 'Evening'], autofocus: true %>
  </div>
  </div>
  </div>

  <div class="row" data-equalizer>
    <div class="medium-12 columns" data-equalizer-watch>
  <div class="field">
    <%= f.text_field :response_time, placeholder: "Response Time (roughly)", autofocus: true %>
  </div>
  </div>
  </div>

  <div class="row" data-equalizer>
    <div class="medium-12 columns" data-equalizer-watch>
  <div class="field">
  <div class="actions">
    <%= f.submit "Share Skill" %>
  </div>
  </div>
  </div>

  <% end %>