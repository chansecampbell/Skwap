
<header>
<nav class="top-bar" data-topbar role="navigation">
  <ul class="title-area">
  <li class="name">
  <h1 id="title-name"><%= link_to "Skwap", root_path %></h1>
  </li>
  <li class="name">
    <% current_uri = request.env['PATH_INFO'] %>
    <% if current_uri == skills_path %>
      <span class="title-secondary-name">learn</span>
      <% elsif current_uri == new_skill_path %>
      <span class="title-secondary-name">share</span>
      <% end %>
      </li>
     <!-- Remove the class "menu-icon" to get rid of menu icon. Take out "Menu" to just have icon alone -->
    <li class="toggle-topbar menu-icon"><a href="#"><span></span></a></li>
  </ul>

  <section class="top-bar-section">
    <!-- Right Nav Section -->
    <ul class="right">
      <% if user_signed_in? %>
      <li><%= link_to "HOME", root_path %></li>
      <li><%= link_to "ABOUT", about_path %></li>
      <li><%= link_to 'LEARN', skills_path(:anchor => "learn") %></li>
      <li><%= link_to 'SHARE', new_skill_path(:anchor => "share") %></li>
      <li><%= link_to 'LOGOUT', destroy_user_session_path, method: :delete %></li>
      <% else %>
      <li><%= link_to "HOME", root_path %></li>
      <li><%= link_to "ABOUT", about_path %></li>
      <li><%= link_to 'LOGIN', user_session_path%></li>
      <li><%= link_to 'SIGN UP', new_user_registration_path%></li>
      <% end %>
      <li class="has-dropdown">
      </li>
    </ul>

    <!-- Left Nav Section -->
    <!-- <ul class="left">
    </ul> -->
  </section>
</nav>
</header>